<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Section</th>
      <th>Location</th>
      <th>Value</th>
      <th>Status</th>
      <th>Reactions</th>
      <th>Is owner</th>
      <th>Collection notes</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.section %></td>
        <td><%= article.location %></td>
        <td><%= article.value %></td>
        <td><%= article.status %></td>
        <td><%= article.reactions %></td>
        <td><%= article.is_owner %></td>
        <td><%= article.collection_notes %></td>
        <td><%= article.images %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
