<%= stylesheet_link_tag 'articles.css' %>

<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- load MUI -->
    <link href="//cdn.muicss.com/mui-0.10.3/css/mui.min.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.muicss.com/mui-0.10.3/js/mui.min.js"></script>
  </head>
  <body>
    <div class="mui-container">
      <div class="mui-panel">
        <div id="content" class="mui-container-fluid">
          <table>
              <tbody>
                <% @articles.each do |article| %>
                    <tr style="padding:10px">
                      <div class="mui-container">
                        <div class="mui-row">
                          <td class="image-box">
                            <img><%= image_tag article.image %>
                          </td>
                          <td class="content">
                            <div class="mui-container">
                              <div class="mui-row">
                                <div class="mui-col-md-2"></div>
                                <div class="mui-col-md-8">
                                  <h2><%= article.title %></h2>
                                </div>
                                <div class="mui-col-md-2"></div>
                              </div>
                              <div class="mui-row user">
                                <div class="mui-col-md-4">
                                  <div class="avatar-box">
                                    <img><%= image_tag article.user.current_avatar %>
                                  </div>
                                </div>
                                <div class="mui-col-md-4">
                                  <h3><%= article.user.first_name %></h3>
                                </div>
                                <div class="mui-col-md-4">
                                  <h3 class="rating"> &#11088; <%= article.user.rating['rating'] || "no rating" %> </h3>
                                </div>
                              </div>
                              <div class="mui-row user">
                                <div class="mui-col-md-2"></div>
                                <div class="mui-col-md-4">
                                  <h3> &#128205; <%= article.address.distance %></h3>
                                </div>
                                <div class="mui-col-md-4">
                                  <h3> &#128065; <%= article.reaction.impressions %></h3>
                                </div>
                                <div class="mui-col-md-2"></div>
                              </div>
                              <div class="mui-row user">
                                <div class="mui-col-md-4"></div>
                                <div class="mui-col-md-2 user" style="float:right">
                                    <% if article.reaction.by_user == true %>
                                      <button class="mui-btn mui-btn--fab" style="box-shadow:none" disabled>
                                        &#10084;&#65039;
                                      </button>
                                    <% else %>
                                      <form>
                                        <%= link_to "&#9825;".html_safe, like_path(id: article.id), :class => 'mui-btn mui-btn--fab', :style => "box-shadow:none" %>
                                      </form>
                                    <% end %>
                                  <p> <%= article.reaction.likes %></p>
                                </div>
                                <div class="mui-col-md-4"></div>
                              </div>
                            </div>
                          </td>
                        </div>
                      </div>
                    </tr>
                <% end %>
              </tbody>
          </table>
        </div>
    </div>
  </body>
</html>
